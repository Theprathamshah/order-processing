{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module":"ES6",
    "moduleResolution":"node",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true, 
    "rootDir": "src",
    "lib": ["ES2019", "ES6","DOM"]
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}