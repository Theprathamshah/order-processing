{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "@typescript-eslint/no-unused-vars": [
            "error"
        ],
        "no-console": "off",
        "indent": ["error",2],
        "@typescript-eslint/no-explicit-any":"off",
        "quotes": ["error", "double"]
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/"
    ]
}